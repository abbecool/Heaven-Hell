{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-release",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "build/Release"
      ],
      "group": "build",
      "problemMatcher": "$gcc"
    },
    {
      "label": "build-debug",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "build/Debug"
      ],
      "group": "build",
      "problemMatcher": "$gcc"
    }
  ]
}
